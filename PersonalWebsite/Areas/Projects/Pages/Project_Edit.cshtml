@page
@model PersonalWebsite.Areas.Projects.Pages.ProjectEditModel
@using PersonalWebsite.GithubService;
@{
    ViewData["Title"] = "Edit Project";
}

<div class="container spacer">
    <h1>Edit '@(Model.SelectedProject.Name)'</h1>

    <form method="post">
        <div class="form-group">
            <textarea class="form-control" asp-for="Data.CustomExperience" rows="16" cols="60"></textarea>
        </div>
        <div class="form-group">
            <select asp-for="Data.TextFormat" asp-items="Html.GetEnumSelectList<ExperienceTextFormat>()" class="form-control mt-3 w-25"></select>
        </div>
        <button type="submit" class="btn btn-primary float-right mt-3">Edit</button>
    </form>

</div>