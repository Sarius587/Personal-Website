@page "{id}"
@model PersonalWebsite.Areas.Projects.Pages.ProjectDetail
@{
    ViewData["Title"] = Model.SelectedProject.Name + " - Niels Pressel";
}

    <div class="spacer container pb-3">

        @if (Model.SelectedProject.AdditionalRepositoryData.CustomExperienceHtml == null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                There is no custom experience for this project. Instead the project's README is rendered.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="d-flex flex-row-reverse mt-2 mb-2">
                <a class="btn btn-primary" href="@Model.SelectedProject.Url">GitHub</a>
            </div>
            @Model.SelectedProject.ReadmeHtml
        }
        else
        {
            <div class="float-right">
                <a class="btn btn-primary mt-3" href="@Model.SelectedProject.Url">GitHub</a>
            </div>
            @Model.SelectedProject.AdditionalRepositoryData.CustomExperienceHtml
        }
    </div>